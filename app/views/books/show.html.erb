


<div class="container">
  <div class="row">
    <div class="col-xs-3">

<h1>User info</h1>
    <table class='table'>
  <tr><%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback:"no_image.png",size: :'50x50' %></tr>
     <tr>
        <th>name</th>
        <th><%= @book.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @book.user.introduction %></th>
      </tr>
</table>



  <div class="row">
<%= link_to edit_user_path(current_user) do %> 
<span class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></span>
<% end %>
</div>

<%= form_for(@book_new) do |f| %>
<h3>New Book</h3>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit  'Create Books' %>
<% end %>


</div>

 <div class="col-xs-9">
  <h2>Book Details</h2>
  <table class="table table-striped">
   <thead>
   	 <tr>
      <th></th>
 		 <th></th>
 		 <th></th>
     </tr>
   </thead>
 <tbody>
	  <tr>
    <td>
      <%= link_to user_path(@book.user) do %>
      <%= attachment_image_tag @book.user, :profile_image, fallback:"no_image.png",size: :'20x20' %>
      <%= @book.user.name %>
        <% end %>

    <td><%= link_to @book.title, book_path(@book) %></td>
    <td><%= @book.body %></td>


    <% if @book.user_id == current_user.id %>
   	  <td><%= link_to "edit", edit_book_path(@book) %></td>
      <td><%= link_to "destroy", book_path(@book), method: :delete, "data-confirm" => "are you sure?" %></td>
      <% end %>

 	  </tr>
 </tbody>
</table>
</div>
</div>
</div>
