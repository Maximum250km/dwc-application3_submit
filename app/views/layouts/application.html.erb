<!DOCTYPE html>
<html>
  <head>
    <title>BookersVer2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand">Bookers</a>
    </div>
 <ul class="nav navbar-nav">
        <% if user_signed_in? %>
      <li class="active"><%= link_to "Home", user_path(current_user), class: 'glyphicon glyphicon-home' %></li>
      <li class="active"><%= link_to "Users",users_path, class: 'glyphicon glyphicon-user' %></li>
      <li class="active"><%= link_to "Books", books_path, class: 'glyphicon glyphicon-book' %></li>
      <li class="active"><%= link_to "logout", destroy_user_session_path, method: :delete, class: 'glyphicon glyphicon-log-in' %></li>
        </ul>
       <% else %>
         <ul class="nav navbar-nav">
      <li class="active"><%= link_to "Home", root_path, class: 'glyphicon glyphicon-home' %></li>
      <li class="active"><%= link_to "about", home_about_path, class: 'glyphicon glyphicon-search' %></li>
    <li class="active"><%= link_to "sign up", new_user_registration_path, class: 'glyphicon glyphicon-log-in' %></li>
    <li class="active"><%= link_to "log in", new_user_session_path, class: 'glyphicon glyphicon-log-in' %></li> 
      <% end %>
    </ul>

  </div>
</nav>

 <%= flash[:message] %>
    <%= yield %>


<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-10">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</body>
</html>




