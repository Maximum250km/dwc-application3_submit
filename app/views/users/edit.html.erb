




<h1>Editing Profile</h1>

<%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <h4>name<h4>
	<%= f.text_field :name %>
  <h4>image</h4>
   <%= f.attachment_field :profile_image %>
<h4>introduction</h4>
   <%= f.text_area :introduction %>
   <%= f.submit 'Update User'  %>

   <% end %>
